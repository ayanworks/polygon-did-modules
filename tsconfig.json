{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "vitest/globals"],
    "allowJs": true
  },
  "include": ["tests", "packages", "tests/vitest.d.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "build",
    "**/build/**",
    ".pnpm",
    "**/.pnpm/**",
    "**/artifacts/**",
    // We are adding this to exclude because the type checks will fail as the contract json is only created after compile
    "packages/did-registry-contract/src"
  ]
}
